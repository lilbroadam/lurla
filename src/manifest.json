{
	"name": "Lurla",
  "version": "1.0",
  "manifest_version": 2, // TODO update to manivest v3
  "background": {
    "scripts": ["abbreviationUtils.js",
                "storageManager.js",
                "interceptor.js",
                "omnibox.js"],
    "persistent": true
  },
  "omnibox": { "keyword" : "lurla" },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ]
}
