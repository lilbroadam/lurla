{
  "name": "lurla-chrome",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.26",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "radium": "^0.26.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4",
    "web-vitals": "^1.1.2",
    "webpack-cli": "^4.9.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.158",
    "@types/radium": "^0.24.4",
    "cra-build-watch": "^3.4.0",
    "cross-env": "^7.0.3",
    "ts-loader": "^8.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "rimraf build",
    "build": "npm-run-all build:*",
    "build:app": "cross-env INLINE_RUNTIME_CHUNK=false react-scripts build",
    "build:bg": "webpack --config ./background.webpack.config.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "cra-build-watch --after-initial-build-hook 'npm run build:bg' --after-rebuild-hook 'npm run build:bg'",
    "watch:app": "cra-build-watch --after-initial-build-hook 'npm run build:bg'",
    "watch:bg": "cross-env CHOKIDAR_USEPOLLING=true webpack --watch --progress --config ./background.webpack.config.js",
    "watch:p": "npm-run-all --parallel watch build:bg:watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "env": {
      "webextensions": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
