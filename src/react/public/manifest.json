{
  "name": "Lurla popup - React",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 2, // TODO update to manifest v3
  "background": {
    "scripts": ["./background/background.js"],
    "persistent": true // TODO might not need to be true
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}